@page
@model Project.Pages.Account.Login

@{
    ViewData["Title"] = "Login";
}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row my-1">
            <div class="col-2">
                <label asp-for="Credential.UserName"></label>
            </div>
            <div class="col-3">
                <input type="text" asp-for="Credential.UserName" class="form-control"/>
            </div>
            <span class="text-danger col-3" asp-validation-for="Credential.UserName"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-3">
                <input type="password" asp-for="Credential.Password" class="form-control"/>
            </div>
            <span class="text-danger col-3" asp-validation-for="Credential.Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login"/>
            </div>
        </div>
    </form>

</div>