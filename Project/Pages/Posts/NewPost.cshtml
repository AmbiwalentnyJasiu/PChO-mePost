@page
@model Project.Pages.Posts.NewPost

@{
    ViewData["Title"] = "NewPost";
}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row my-1">
            <div class="col-2">
                <label asp-for="Post.Content"></label>
            </div>
            <div class="col-3">
                <input type="text" asp-for="Post.Content" class="form-control"/>
            </div>
            <span class="text-danger col-3" asp-validation-for="Post.Content"></span>
        </div>
        <div class="form-group row my-1">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Post"/>
            </div>
        </div>
    </form>
</div>